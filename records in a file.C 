#include <stdio.h>

int main() {
    FILE *file;
    char line[100];
    int count = 0;

    file = fopen("records.txt", "r");  // Open file in read mode

    if (file == NULL) {
        printf("Error opening file!\n");
        return 1;
    }

    // Count lines until end of file
    while (fgets(line, sizeof(line), file) != NULL) {
        count++;
    }

    fclose(file);

    printf("Total records in file: %d\n", count);
    return 0;
}