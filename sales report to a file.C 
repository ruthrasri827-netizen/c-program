#include <stdio.h>

int main() {
    FILE *file;
    int id;
    char product[50];
    int quantity;
    float price;

    
    file = fopen("sales_report.txt", "a");

    if (file == NULL) {
        printf("Error opening file!\n");
        return 1;
    }

    printf("Enter Sales ID: ");
    scanf("%d", &id);

    printf("Enter Product Name: ");
    scanf("%s", product);

    printf("Enter Quantity Sold: ");
    scanf("%d", &quantity);

    printf("Enter Price per Item: ");
    scanf("%f", &price);

    
    fprintf(file, "ID: %d, Product: %s, Quantity: %d, Price: %.2f\n", id, product, quantity, price);

    fclose(file);

    printf("Sales report saved successfully!\n");
    return 0;
}