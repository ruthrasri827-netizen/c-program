#include <stdio.h>

int main() {
    FILE *f = fopen("records.txt", "r");
    FILE *temp = fopen("temp.txt", "w");
    int id, upId;
    char name[50], newName[50];

    printf("Enter ID to update: ");
    scanf("%d", &upId);

    while (fscanf(f, "%d %s", &id, name) != EOF) {
        if (id == upId) {
            printf("Enter new name: ");
            scanf("%s", newName);
            fprintf(temp, "%d %s\n", id, newName);
        } else {
            fprintf(temp, "%d %s\n", id, name);
        }
    }

    fclose(f);
    fclose(temp);

    remove("records.txt");
    rename("temp.txt", "records.txt");

    printf("Record updated successfully!\n");
    return 0;
}